<% @matches.each do |match| %>
  <% older = User.find(match.older_id) %>

  <div class="container" style="margin-top: 100px;">
    <div class="row">
      <div class="col-3">
        <%= image_tag older.image_url.to_s, alt: "image", class: "profile-picture" %>
      </div>
      <div class="col-6">
        <h4><%= older.name %></h4>
        <p><%= older.bio %></p>
      </div>
      <div class="col-3">
        <h4>Interests</h4>
        <ul>
          <% @interests = Interest.joins(:userinterests).where(userinterests: { user_id: older.id }) %>
          <% @interests.each do |interest| %>
            <li><%= interest.name %></li>
          <% end %>
        </ul>
      </div>
    </div>
    <div class="text-center">
      <%= link_to "Contact", '#', :method => :get, :class => "homepage-button" %>
    </div>
  </div>
<% end %>
